@model ICollection<Domain.Entities.Patient>
@{
    ViewData["Title"] = "Пациенты";
}

<br />
<a asp-action="CreatePatient">Добавить пациента</a>
<br />
@foreach (var item in Model)
{
    <div class="container" style="border-radius: 5px;">
        <div class="row" style="background-color:#effdff; border-radius:3px;">
            <div class="col-3">@item.FirstName</div>
            <div class="col-6">@item.LastName</div>
        </div>
        <td>
            <a asp-action="Details" asp-controller="Patient" asp-route-id="@item.Id">Подробнее</a> |
            <a asp-action="UpdatePatient" asp-controller="Patient" asp-route-id="@item.Id">Изменить</a> |
            <a asp-action="Delete" asp-controller="Patient" asp-route-id="@item.Id">Удалить</a>
        </td>
    </div>
    <br />
}