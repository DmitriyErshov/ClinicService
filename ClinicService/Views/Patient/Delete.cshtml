@model Domain.Entities.Patient
@{
    ViewBag.Title = "Удаление пациента";
}

<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>Отчество</dt>
        <dd>
            @Html.DisplayFor(model => model.SecondName)
        </dd>
        <dt>Фамилия</dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>Дата рождения</dt>
        <dd>
            @Html.DisplayFor(model => model.Birthday)
        </dd>

    </dl>

    <div>
        <form asp-controller="Patient" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>