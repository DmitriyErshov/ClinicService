@model Domain.Entities.Patient
@{

}

<form asp-action="CreatePatient">
    <h3>Добавить пациента</h3>
    <div>
        <label asp-for="@Model.FirstName">Имя</label>
        <input asp-for="@Model.FirstName" />
    </div>
    <div>
        <label asp-for="@Model.SecondName">Отчество</label>
        <input asp-for="@Model.SecondName" />
    </div>
    <div>
        <label asp-for="@Model.LastName">Фамилия</label>
        <input asp-for="@Model.LastName" />
    </div>
    <div>
        <label asp-for="@Model.PassportNumber">номер паспорта</label>
        <input asp-for="@Model.PassportNumber" />
    </div>
    <div>
        <label asp-for="@Model.Birthday">дата рождения</label>
        <input asp-for="@Model.Birthday" type="date" />
    </div>

    <input type="submit" />
</form>

