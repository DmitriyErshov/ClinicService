@model ICollection<Domain.Entities.Procedure>
@{
    ViewData["Title"] = "Процедуры";
}

<br />
<a asp-action="CreateProcedure">Добавить процедуру</a>
<br />
@foreach (var item in Model)
{
    <div class="container" style="border-radius: 5px;">
        <div class="row" style="background-color:#effdff; border-radius:3px;">
            <div class="col-3">@item.Name</div>
            <div class="col-6">@item.Price</div>
        </div>
        <td>
            <a asp-action="Details" asp-controller="Procedure" asp-route-id="@item.Id">Подробнее</a> |
            <a asp-action="Update" asp-controller="Procedure" asp-route-id="@item.Id">Изменить</a> |
            <a asp-action="Delete" asp-controller="Procedure" asp-route-id="@item.Id">Удалить</a>
        </td>
    </div>
    <br />
}