@model Domain.Entities.Procedure
@{
    ViewBag.Title = "Редактирование процедуры";
}

<form asp-action="Update" asp-controller="Procedure" asp-route-id="@Model.Id">
    <h3>Редактировать</h3>
    <div>
        <label asp-for="@Model.Name">Название</label>
        <input asp-for="@Model.Name" />
    </div>
    <div>
        <label asp-for="@Model.Price">"Цена</label>
        <input asp-for="@Model.Price" />
    </div>
    <input type="submit" />
</form>