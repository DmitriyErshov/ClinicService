@model ICollection<Domain.Entities.Appointment>
@{
    ViewData["Title"] = "Доктора";
}


<br />
@foreach (var item in Model)
{
    <div class="container" style="border-radius: 5px;">
        <div class="row" style="background-color:#effdff; border-radius:3px;">
            <div class="col-3">@item.Doctor.FirstName</div>
            <div class="col-6">@item.Patient.FirstName</div>
            <div class="col-9">@item.Status.Name</div>
            <div class="col-12">@item.Date</div>
        </div>
        <td>
            <a asp-action="Details" asp-controller="Appointment" asp-route-id="@item.Id">Подробнее</a> |
            <a asp-action="Update" asp-controller="Appointment" asp-route-id="@item.Id">Изменить</a> |
            <a asp-action="Delete" asp-controller="Appointment" asp-route-id="@item.Id">Удалить</a>
        </td>
    </div>
    <br />
}